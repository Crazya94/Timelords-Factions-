<?xml version="1.0" encoding="utf-8"?>
<Defs>


  <FactionDef>
    <defName>CYA_Gallifreyan_Faction</defName>
    <label>Gallifreyan</label>
    <description>A humanoid species native to the planet Gallifrey. The majority of Time Lords were Gallifreyans.</description>
    <pawnSingular>Gallifreyan</pawnSingular>
    <pawnsPlural>Gallifreyans</pawnsPlural>
    <basicMemberKind>CYA_Gallifreyan</basicMemberKind>
    <listOrderPriority>10</listOrderPriority>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxCountAtGameStart>1</maxCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>president</leaderTitle>
    <factionIconPath>World/WorldObjects/Expanding/Town</factionIconPath>
    <colorSpectrum>
      <li>(0.45, 0.05, 0.05)</li>
      <li>(0.80, 0.25, 0.05)</li>
    </colorSpectrum>
    <permanentEnemy>true</permanentEnemy>
	<fixedName>The Timelords</fixedName>
    <techLevel>Spacer</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>Offworld</li>
        </categories>
      </li>
    </backstoryFilters>
    <geneticVariance>0.8</geneticVariance>
    <hairTags>
      <li>Punk</li>
    </hairTags>
    <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <!-- Normal fights, ranged with melee mix-ins -->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <CYA_Gallifreyan>10</CYA_Gallifreyan>
        
      </options>
      </li>
      <li>
        <!-- Base defense, mainly ranged with melee mix-ins -->
        <kindDef>Settlement</kindDef>
        <options>
          <CYA_Gallifreyan>2</CYA_Gallifreyan>
        
      </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
  </FactionDef>

</Defs>